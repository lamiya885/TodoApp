
@using TodoApp.Controllers;
@using TodoApp.Controllers.Models
@model Todo
@{
    Layout = "_Layout";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Update</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>
<body>
    <div class="container">
    </div>
   <form  method="put">
       <div class="mb-3">
           <label for="Title" class="form-label" >Title</label>
    <input type="text" value="@Model.Title" class="form-control" placeholder="Title" name="Title" required />
       </div>
        <div class="mb-3">
            <label for="Description" class="form-label">Description</label>
            <input type="text" value="@Model.Description" class="form-control" id="Description" placeholder="Description" name="Description" />
       </div>
        <div class="mb-3">
            <label for="Deadline"class="form-label">Deadline</label>
            <input type="datetime-local" value="@Model.DeadLine.ToString("yyyy-MM-ddThh:mm")" class="form-control" id="Deadline" placeholder="Deadline" name="Deadline" />
        </div>
        <div class="mb-3">
            <label for="IsDone" class="form-check-label">IsDone</label>
            <input type="checkbox" value="@Model.IsDone" class="form-check-input" id="flexchecj" placeholder="IsDone" name="IsDone" />
        </div>


        <button class="btn btn-danger" href="/Todo/Index"> Redakte et </button>
    
    </form>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</body>
</html>
